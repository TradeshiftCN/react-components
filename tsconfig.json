{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es5",
		"module": "ESNext",
		"jsx": "preserve",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "types",
		"outDir": "dist"
	},
	"include": ["src/**/*", "typings/**/*"],
	"exclude": ["node_modules", "**/*.spec.tsx", "**/*.spec.ts"]
}
